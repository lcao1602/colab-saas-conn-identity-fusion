                            "subMenus": [
                                {
                                    "label": "Attribute map configuration",
                                    "items": [
                                        {
                                            "key": "identity",
                                            "label": "Identity attribute",
                                            "type": "text",
                                            "required": true,
                                            "helpKey": "Technical name of the identity attribute to compare with"
                                        },
                                        {
                                            "key": "account",
