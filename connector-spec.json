                        {
                            "key": "lid_field",
                            "label": "Login ID field",
                            "type": "text",
                            "helpText": "The field to store the login id",
                            "required": true
                        },
                        {
                            "key": "lid_start",
                            "label": "The LID starting number",
                            "type": "number",
                            "helpText": "Generated LIDs will never be lower than this number",
                            "required": true
                        },
                        {
                            "key": "lid_maxLength",
                            "label": "The LID maximum string length",
                            "type": "number",
                            "helpText": "Generated LIDs will never have length greater than this number. Any LID with smaller lengths will be prepended with 0s to match the length",
                            "required": true
                        },
                        {
                            "key": "lid_source",
