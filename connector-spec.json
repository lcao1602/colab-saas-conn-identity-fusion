                            "required": true
                        },
                        {
                            "key": "lid_matchingScoreThreshold",
                            "label": "The minimum score which records will be considered matching",
                            "helpText": "Minimum similarity score [0-100] (LIG3 similarity function * 100 from Levenshtein distance)",
                            "type": "number",
                            "required": false
                        }
                    ]
                },
